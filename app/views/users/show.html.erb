<table class="profile" summary="User Profile">
  <tr>
    <td class="main">
  		<h1>
  			<%= gravatar_for @user %>
  			<%= @user.name %>
  		</h1>
      <% unless @user.events.empty? %>
        <table class="events" summary="User Events">
          <%= render @events %>
        </table>
        <%= will_paginate @events %>
      <% end %>
  	</td>
  	<td class="sidebar round">
  	  <% if current_user.admin? %>
  		<strong>Name:</strong> <%= @user.name %><br />
  		<strong>Title:</strong><br />
  		<strong>Employee Since:</strong>
  		<strong>Subscribed Events:</strong> <%= @user.events.count %>
  	  <% else %>
  		<strong>Name:</strong> <%= @user.name %><br />
        <strong>Business Title:</strong><br /> 
  		<strong>Subscribed Events:</strong> <%= @user.events.count %>
  	  <% end %>
  	  <div>
  	    <%= link_to "Add an Event", addevent_path, :class => "add_button1" %>
  	  </div>
    </td>	
  </tr>
</table>
