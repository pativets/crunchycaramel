<div class="page_header">
  <h1>Sign in</h1>
</div>
<div class="page_content">
  <%= form_for(:session, :url => sessions_path) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Sign In" %>
    </div>
  <% end %>
  <p>Don't have an account yet? <%= link_to "Sign up now!", signup_path %></p>
</div>