<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'application.js' %>
  <%= javascript_include_tag 'jquery-1.4.4.min.js' %>
  <%= javascript_include_tag 'rails' %>
  <%= javascript_include_tag 'jquery.coda-slider-2.0.js' %>
  <%= javascript_include_tag 'jquery-ui-1.8.10.custom.min.js' %>
  <%= javascript_include_tag 'jquery.easing.1.3.js' %>
  <%= javascript_include_tag 'jquery.lightbox-0.5.js' %>
  <%= javascript_include_tag 'facebox.js' %>

 	<script type="text/javascript">
		$().ready(function() {
			$('#coda-slider-1').codaSlider();
		});
	</script>
	
	 <script type="text/javascript">
		$(document).ready(function() {
    		$('#event_start_date').datepicker();
  		});
	 </script>
	
	<script type="text/javascript">
		$(document).ready(function() {
    		$('#event_end_date').datepicker();
  		});
	 </script>
	
	 <script type="text/javascript">
	    $(document).ready(function() {
	      $('a[rel*=facebox]').facebox({
	        loadingImage : 'images/loading.gif',
	        closeImage   : 'images/closelabel.png'
	      })
	    })
	  </script>
	
</head>
<body>
  <div class="container">
    <%= render 'layouts/header' %>
    <div class="sidebar" id="left">
      This is a left sidebar.
    </div>
    <section class="round">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, :class => "flash #{key}") %>
      <% end %>
      <%= yield %>
    </section>
    <div class="sidebar" id="right">
      This is a right sidebar.
    </div>
  <%= render 'layouts/footer' %>
  </div>
</body>
</html>