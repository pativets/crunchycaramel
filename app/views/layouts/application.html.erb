<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'application.js' %>
  <%= javascript_include_tag 'jquery-1.4.4.min.js' %>
  <%= javascript_include_tag 'rails' %>
  <%= javascript_include_tag 'jquery.coda-slider-2.0.js' %>
  <%= javascript_include_tag 'jquery-ui-1.8.10.custom.min.js' %>
  <%= javascript_include_tag 'jquery.easing.1.3.js' %>

 	<script type="text/javascript">
		$().ready(function() {
			$('#coda-slider-1').codaSlider();
		});
	</script>
	
	 <script type="text/javascript">
		$(document).ready(function() {
    		$('#event_startdate').datepicker();
  		});
	 </script>
	
	<script type="text/javascript">
		$(document).ready(function() {
    		$('#event_enddate').datepicker();
  		});
	 </script>
</head>

<body>
    <div class="container">
      <%= render 'layouts/header' %>
      <section class="round">
		<% flash.each do |key, value| %>
            <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
</body>
</html>
