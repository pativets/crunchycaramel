<tr>  
  <td class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </td>
  <td class="event">
    <span class="user">
      <%= feed_item.category %> | 
      <%= link_to feed_item.title, event_path(feed_item) %> @ 
      <%= feed_item.location %>
    </span>
    <span class="general">
      <%= feed_item.start_date.strftime("%b %d, %Y at") %>
   	  <%= feed_item.start_time.strftime("%I:%M %p") %>
   	</span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago by
      <%= link_to feed_item.user.name, feed_item.user %>.
    </span>
  </td>
  <td class="delete">
    <% if current_user?(feed_item.user) %>
        <%= link_to "x", feed_item, :method => :delete,
                                    :confirm => "Are you sure?",
                                    :title => feed_item.description %>
    <% end %>
  </td>
</tr>